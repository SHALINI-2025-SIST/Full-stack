        document.addEventListener('DOMContentLoaded', function () {
            const apiUrl = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS_LLWrMLGEke8XYZlB56c5LUXReGO2rO-n3A&s";
            // Simulate API call with patient data
            const mockApiResponse = {
                patientName: "Mrs. NISHA",
                age: 30,
                gender: "Female",
                email: "xyz@gmail.com",
                phoneNumber: "+91 9876543210",
                doctorName: "Dr. Sana",
                symptoms: "Fever, Cough",
                appointmentDate: "2024-12-10",
                medicalHistory: "None",
                prescriptionStatus: "Pending",
                imageUrl: apiUrl
            };

            // Load data into the card
            document.getElementById('patientName').textContent = mockApiResponse.patientName;
            document.getElementById('age').textContent = mockApiResponse.age;
            document.getElementById('gender').textContent = mockApiResponse.gender;
            document.getElementById('email').textContent = mockApiResponse.email;
            document.getElementById('phoneNumber').textContent = mockApiResponse.phoneNumber;
            document.getElementById('symptoms').textContent = mockApiResponse.symptoms;
            document.getElementById('appointmentDate').textContent = mockApiResponse.appointmentDate;
            document.getElementById('medicalHistory').textContent = mockApiResponse.medicalHistory;
            document.getElementById('prescriptionStatus').textContent = mockApiResponse.prescriptionStatus;
            document.getElementById('patientImage').src = mockApiResponse.imageUrl;
        });
